.titles {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(190px, 1fr));
    gap: 8px;
    margin: var(--s) 0;
    img {
        width: 100%;
    }
}
a.title {
    padding: max(16px, 5%);
    display: flex !important;
    justify-content: center;
    align-items: center;
    font-size: var(--fs-xxs);
    color: var(--gray500);
    width: 100%;
    height: 80px;
    outline: 1px solid var(--gray100);
    position: relative;
}
.title > * {
    height: 100%;
}
